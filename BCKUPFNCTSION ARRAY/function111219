		$username = $pnwrn['username'];
		$nopen = sprintf("%04s", $nourut);
		$referensi = $pnwrn['referensi'];
		$no_penawaran = 'Q-' . $nopen . '/IPI/' . '/' . $username . '/' . $bln . '/' . $thn;


		$query = "INSERT INTO sales_penawaran(pk_penawaran, no_penawaran, pk_cust_penawaran, rs_penawaran, alamat_penawaran,kota_penawaran, nama_cust_penawaran, pk_mod_penawaran, nama_mod_penawaran, model_penawaran, merk_penawaran, spek_penawaran, harga_penawaran, budget_penawaran, qty, tgl_penawaran, status, username, referensi_penawaran ) VALUES ('$ai','$no_penawaran','$pk_kunjungan','$rs_kunjungan','$alamat_kunjungan','$kota_kunjungan','$nama_kunjungan_penawaran','$pk_mod1','$nama_mod','$model_mod','$merk_mod','$spek_mod','$harga_penawaran', '$budget','$qty',NOW(),'30%','$username', '$referensi')";
